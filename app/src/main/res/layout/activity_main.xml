<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemahan"
        android:id="@+id/btnTerjemahanIn"
        android:onClick="onClickTblTerjemahIn"
        android:layout_alignTop="@+id/btn_terjemah_en"
        android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tombol_translate"
            android:id="@+id/btn_terjemah_en"
            android:onClick="onClickTblTerjemahEng"
        android:capitalize="none"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtTulisan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tombol_arti"
            android:onClick="onClickTblTerjemahAch"
            android:id="@+id/btn_terjemah_ac"

        android:capitalize="none"
        android:layout_alignTop="@+id/btnTerjemahanIn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
